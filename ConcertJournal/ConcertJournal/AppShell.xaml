<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConcertJournal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ConcertJournal"
    xmlns:material="clr-namespace:UraniumUI.Material.Controls;assembly=UraniumUI.Material"
    xmlns:views="clr-namespace:ConcertJournal.Views"
    Shell.FlyoutBehavior="Disabled"
    BackgroundColor="{DynamicResource PrimaryDark}">

    <ShellContent 
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage"/>

    <ShellContent
        Route="AddConcertPage"
        ContentTemplate="{DataTemplate views:AddConcertPage}" />

    <ShellContent
        Route="ConcertListPage"
        ContentTemplate="{DataTemplate views:ConcertListPage}" />
    
    <ShellContent
        Route="SettingsPage"
        ContentTemplate="{DataTemplate views:SettingsPage}" />

    <ShellContent
        Route="ConcertDetailsPage"
        ContentTemplate="{DataTemplate views:ConcertDetailsPage}" />
    
    <ShellContent
        Route="StatisticsPage"
        ContentTemplate="{DataTemplate views:StatisticsPage}" />

    <ShellContent
        Route="PerformerDetailsPage"
        ContentTemplate="{DataTemplate views:PerformerDetailsPage}" />
</Shell>
