<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConcertJournal.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ConcertJournal"
    xmlns:views="clr-namespace:ConcertJournal.Views"
    Shell.FlyoutBehavior="Disabled"
    Shell.TabBarForegroundColor="#c7f5ff"
    Title="ConcertJournal">

    <!-- Bottom Navigation Bar -->
    <TabBar>
        <!-- 1️. Start Page -->
        <ShellContent
            Icon="home.png"
            ContentTemplate="{DataTemplate views:StartPage}" />

        <!-- 2️. Add Concert Page -->
        <ShellContent
            Icon="plus.png"
            ContentTemplate="{DataTemplate views:AddConcertPage}" />

        <!-- 3️. Concert List Page -->
        <ShellContent
            Icon="list.png"
            ContentTemplate="{DataTemplate views:ConcertListPage}" />
    </TabBar>

</Shell>
