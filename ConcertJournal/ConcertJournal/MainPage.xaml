<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcertJournal.MainPage"
             xmlns:vm="clr-namespace:ConcertJournal.ViewModels"
             xmlns:models="clr-namespace:ConcertJournal.Models"
             Title="Event Journal">

    <Grid RowDefinitions="*,Auto">


        <!-- LIST OF CONCERTS -->
        <CollectionView x:Name="ConcertsView"
                    Grid.Row="0"
                    ItemsLayout="VerticalList"
                    SelectionMode="None">

            <!-- When there are NO concerts, show this -->
            <CollectionView.EmptyView>
                <VerticalStackLayout Padding="24" Spacing="16"
                             VerticalOptions="Center"
                             HorizontalOptions="Center">
                    <Label Text="No events yet"
                             FontSize="24"
                             HorizontalOptions="Center" />
                    <Button Text="Add Event"
                            Clicked="OnAddConcertClicked"
                            HorizontalOptions="Center" />
                </VerticalStackLayout>
            </CollectionView.EmptyView>


            <!-- Concert details -->
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Margin="0,5"
                            Padding="10"
                            BackgroundColor="#1E1E1E">
                        <VerticalStackLayout Grid.Column="0">
                        <Label Text="{Binding EventTitle}" 
                                FontSize="18" 
                                TextColor="White" 
                                FontAttributes="Bold"/>
                        <Label Text="{Binding Performers}" 
                                FontSize="14" 
                                TextColor="Gray"/>

                        <HorizontalStackLayout Spacing="10">
                            <Label Text="{Binding Venue}" 
                                FontSize="14" 
                                TextColor="LightGray"/>
                            <Label Text="{Binding Country}" 
                                FontSize="14" 
                                TextColor="LightGray"/>
                            <Label Text="{Binding City}" 
                                FontSize="14" 
                                TextColor="LightGray"/>
                        </HorizontalStackLayout>

                        <Label Text="{Binding Date, StringFormat='{}{0:dd MMM yyyy}'}" 
                                FontSize="12" 
                                TextColor="Gray"/>
                    </VerticalStackLayout>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- BOTTOM NAV BAR -->
        <Grid Grid.Row="1"
              BackgroundColor="#00BBF2"
              HeightRequest="70"
              ColumnDefinitions="*,*,*"
              VerticalOptions="End"
              Padding="10,10">

            <ImageButton Grid.Column="0"
                         Source="home.png"
                         HorizontalOptions="Center"
                         Clicked="OnStartPageClicked" />

            <ImageButton Grid.Column="1"
                         Source="plus.png"
                         HorizontalOptions="Center"
                         Clicked="OnAddConcertClicked"/>

            <ImageButton Grid.Column="2"
                         Source="list.png"
                         HorizontalOptions="Center" 
                         Clicked="OnConcertListClicked"/>
        </Grid>

    </Grid>

</ContentPage>
