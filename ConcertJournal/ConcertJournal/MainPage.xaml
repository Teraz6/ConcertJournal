<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcertJournal.MainPage"
             xmlns:controls="clr-namespace:ConcertJournal.Views.Controls"
             xmlns:models="clr-namespace:ConcertJournal.Models"
             BackgroundColor="{DynamicResource Background}">

    <Grid RowDefinitions="*,Auto">
        <Grid RowDefinitions="*,*"
              Padding="10">
            <!--MainContent-->
            <VerticalStackLayout Grid.Row="0"
                                 Spacing="20"
                                 Margin="0,100,0,0">
                <Image Source="{DynamicResource Logo}"
                       MaximumHeightRequest="400"
                       MaximumWidthRequest="400"
                       HorizontalOptions="Center"
                       Margin="10"/>
                <Label Text="Keep track of every gig, festival and performances you've seen" 
                       HorizontalOptions="Center"
                       FontSize="24"
                       HorizontalTextAlignment="Center"/> 
            </VerticalStackLayout>

            <!-- STATS PANEL -->
            <Border Grid.Row="1" 
                    x:Name="StatsPanel"
                    IsVisible="{Binding HasConcerts}"
                    StrokeThickness="2"
                    Stroke="{DynamicResource Primary}"
                    Padding="10"
                    VerticalOptions="Center">

                <Grid RowDefinitions="*,*"
                      ColumnDefinitions="*,*,*">

                    <Label Grid.Row="0"
                           Grid.ColumnSpan="3"
                           Text="Statistics"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>

                    <VerticalStackLayout Grid.Row="1"
                                         Grid.Column="0"
                                         HorizontalOptions="Center"
                                         Spacing="15">
                        <Label Text="Ended"
                               FontSize="24"/>
                        <Label Text="{Binding HappenedCount}"
                               HorizontalOptions="Center"
                               FontSize="24"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Row="1"
                                         Grid.Column="1"
                                         Spacing="15"
                                         HorizontalOptions="Center">
                        <Label Text="Upcoming"
                               FontSize="24"/>
                        <Label Text="{Binding ScheduledCount}"
                               HorizontalOptions="Center"
                               FontSize="24"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout Grid.Row="1"
                                         Grid.Column="2"
                                         Spacing="15"
                                         HorizontalOptions="Center">
                        <Label Text="Total"
                               FontSize="24"/>
                        <Label Text="{Binding TotalCount}"
                               HorizontalOptions="Center"
                               FontSize="24"/>
                    </VerticalStackLayout>
                    

                </Grid>
            </Border>
        </Grid>
        <!--Navigation bar-->
        <controls:BottomNavBar Grid.Row="3" />
    </Grid>
</ContentPage>