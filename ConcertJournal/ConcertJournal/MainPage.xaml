<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcertJournal.MainPage"
             xmlns:controls="clr-namespace:ConcertJournal.Views.Controls"
             xmlns:models="clr-namespace:ConcertJournal.Models"
             BackgroundColor="{DynamicResource Background}">

    <!-- styles for the stats panel (kept lightweight) -->
    <ContentPage.Resources>
        <Style x:Key="StatTitle" 
               TargetType="Label">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="FontAutoScalingEnabled" Value="False"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>
        <Style x:Key="StatValue" 
               TargetType="Label">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontAttributes" Value="Bold"/>
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="FontAutoScalingEnabled" Value="False"/>
            <Setter Property="Margin" Value="0,2,0,0"/>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*,Auto">

        <!--MainContent-->
        <VerticalStackLayout>
            <Label
               Grid.Row="0"
               Text="Concert Journal"
               FontSize="30"
               FontAttributes="Bold"
               VerticalOptions="Start" 
               HorizontalOptions="Center"
               TextColor="{DynamicResource TextColor}"
               Margin="0,10"/>
        </VerticalStackLayout>

        <!-- STATS PANEL -->
        <Border Grid.Row="1" 
               x:Name="StatsPanel"
               IsVisible="{Binding HasConcerts}"
               Margin="5" 
               Padding="12" 
               HeightRequest="100">

            <Grid RowDefinitions="Auto,Auto"
                  ColumnDefinitions="*,*,*"
                  RowSpacing="8"
                  ColumnSpacing="24"
                  Margin="0,0,0,12">

                <VerticalStackLayout 
                    Grid.Row="0"
                    Grid.Column="0"
                    Spacing="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                    <Label Text="Happened" Style="{StaticResource StatTitle}"/>
                    <Label Text="{Binding HappenedCount}" Style="{StaticResource StatValue}"/>
                </VerticalStackLayout>

                <VerticalStackLayout
                    Grid.Row="0"
                    Grid.Column="1" 
                    Spacing="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                    <Label Text="Scheduled" Style="{StaticResource StatTitle}"/>
                    <Label Text="{Binding ScheduledCount}" Style="{StaticResource StatValue}"/>
                </VerticalStackLayout>

                <VerticalStackLayout 
                    Grid.Row="0"
                    Grid.Column="2" 
                    Spacing="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                    <Label Text="All" Style="{StaticResource StatTitle}"/>
                    <Label Text="{Binding TotalCount}" Style="{StaticResource StatValue}"/>
                </VerticalStackLayout>

            </Grid>
        </Border>

        <!-- centered, middle row -->
        <Border Grid.Row="3"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                WidthRequest="340"
                Padding="0"
                Margin="0,0,0,80"
                ZIndex="20">
            <Label 
                 FontAttributes="Bold"
                 Text="Rock your memories with Event Journal! Keep track of every gig, festival, and performance you’ve seen — add notes, photos, and videos to relive the moments."
                 TextColor="{DynamicResource TextColor}"
                 FontSize="24"
                 LineBreakMode="WordWrap"/>
        </Border>

        <!--Navigation bar-->
        <controls:BottomNavBar Grid.Row="3" />
    </Grid>
</ContentPage>