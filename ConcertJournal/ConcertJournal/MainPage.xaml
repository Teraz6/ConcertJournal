<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcertJournal.MainPage"
             xmlns:controls="clr-namespace:ConcertJournal.Views.Controls"
             xmlns:models="clr-namespace:ConcertJournal.Models"
             BackgroundColor="{DynamicResource Background}">

    <!-- styles for the stats panel (kept lightweight) -->
        <ContentPage.Resources>
            <Style x:Key="StatTitle" 
               TargetType="Label">
                <Setter Property="FontSize" 
                    Value="18"/>
                <Setter Property="FontAttributes" 
                    Value="Bold"/>
                <Setter Property="HorizontalTextAlignment" 
                    Value="Center"/>
                <Setter Property="FontAutoScalingEnabled"
                    Value="False"/>
                <Setter Property="Margin"
                    Value="0,2,0,0"/>
            </Style>
            <Style x:Key="StatValue" 
               TargetType="Label">
                <Setter Property="FontSize" 
                    Value="32"/>
                <Setter Property="FontAttributes" 
                    Value="Bold"/>
                <Setter Property="HorizontalTextAlignment" 
                    Value="Center"/>
                <Setter Property="FontAutoScalingEnabled"
                    Value="False"/>
                <Setter Property="Margin"
                    Value="0,2,0,0"/>
            </Style>
        </ContentPage.Resources>

        <Grid RowDefinitions="*,*,*">

            <!-- STATS PANEL -->
            <Border Grid.Row="0" 
               x:Name="StatsPanel"
               IsVisible="{Binding HasConcerts}"
               Margin="5" 
               Padding="12" 
               HeightRequest="190">

                <Grid RowDefinitions="Auto,Auto"
                  ColumnDefinitions="*,*"
                  RowSpacing="8"
                  ColumnSpacing="24"
                  Margin="0,0,0,12">

                    <VerticalStackLayout 
                    Grid.Row="0"
                    Grid.Column="0"
                    Spacing="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                        <Label Text="Happened" 
                           Style="{StaticResource StatTitle}"/>
                        <Label Text="{Binding HappenedCount}" 
                           Style="{StaticResource StatValue}"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout
                    Grid.Row="0"
                    Grid.Column="1"
                    Spacing="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                        <Label Text="Missed" 
                           Style="{StaticResource StatTitle}"/>
                        <Label Text="{Binding MissedCount}" 
                           Style="{StaticResource StatValue}"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout
                    Grid.Row="1"
                    Grid.Column="0" 
                    Spacing="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                        <Label Text="Cancelled" 
                           Style="{StaticResource StatTitle}"/>
                        <Label Text="{Binding CancelledCount}" 
                           Style="{StaticResource StatValue}"/>
                    </VerticalStackLayout>

                    <VerticalStackLayout 
                    Grid.Row="1"
                    Grid.Column="1" 
                    Spacing="0"
                    VerticalOptions="Center"
                    HorizontalOptions="Center">
                        <Label Text="All" 
                           Style="{StaticResource StatTitle}"/>
                        <Label Text="{Binding TotalCount}" 
                           Style="{StaticResource StatValue}"/>
                    </VerticalStackLayout>

                </Grid>
            </Border>

            <!-- LIST OF CONCERTS -->
            <CollectionView x:Name="ConcertsView"
                        Grid.Row="1"
                        ItemsLayout="VerticalList"
                        SelectionMode="None">

                <!-- Concert details -->
            
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,5"
                            Padding="10"
                            BackgroundColor="#1E1E1E">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding EventTitle}" 
                                   FontSize="18" 
                                   TextColor="White" 
                                   FontAttributes="Bold"/>
                                <Label Text="{Binding Performers}" 
                                   FontSize="14" 
                                   TextColor="Gray"/>

                                <HorizontalStackLayout Spacing="10">
                                    <Label Text="{Binding Venue}" 
                                       FontSize="14" 
                                       TextColor="LightGray"/>
                                    <Label Text="{Binding Country}" 
                                       FontSize="14" 
                                       TextColor="LightGray"/>
                                    <Label Text="{Binding City}" 
                                       FontSize="14" 
                                       TextColor="LightGray"/>
                                </HorizontalStackLayout>

                                <Label Text="{Binding Date, StringFormat='{}{0:dd MMM yyyy}'}" 
                                   FontSize="12" 
                                   TextColor="Gray"/>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        <!-- ARROW -> points to the middle button -->
        <Image x:Name="AddArrow"
               Source="downarrow.png"
               Grid.Row="1"
               HorizontalOptions="Center"    
               VerticalOptions="End"
               Margin="0,0,0,10"
               WidthRequest="120"
               HeightRequest="120"
               ZIndex="10" />

         <!--Navigation bar-->
        <controls:BottomNavBar Grid.Row="1" />
    </Grid>
</ContentPage>