<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcertJournal.MainPage"
             xmlns:controls="clr-namespace:ConcertJournal.Views.Controls"
             xmlns:models="clr-namespace:ConcertJournal.Models"
             BackgroundColor="{DynamicResource Background}">

    <Grid RowDefinitions="*,Auto">
        
        <!--MainContent-->
        <VerticalStackLayout
            Grid.Row="0"
            Grid.Column="1"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <Label
                Text="Go to settings page"
                FontSize="24"
                HorizontalOptions="Center" />

            <Button
                Text="Settings"
                Clicked="OnSettingsPageClicked"
                HorizontalOptions="Center" />
        </VerticalStackLayout>

        <!--Navigation bar-->
        <controls:BottomNavBar Grid.Row="1" />
    </Grid>
    
</ContentPage>
