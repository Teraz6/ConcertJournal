<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcertJournal.MainPage"
             xmlns:controls="clr-namespace:ConcertJournal.Views.Controls"
             xmlns:models="clr-namespace:ConcertJournal.Models"
             BackgroundColor="{DynamicResource Background}">

    <Grid RowDefinitions="*,Auto">
        <Grid RowDefinitions="*,*"
              Padding="10">
            <!--MainContent-->
            <VerticalStackLayout Grid.Row="0"
                                 Spacing="20"
                                 Margin="0,100,0,0">
                <Image Source="{DynamicResource Logo}"
                       MaximumHeightRequest="400"
                       MaximumWidthRequest="400"
                       HorizontalOptions="Center"
                       Margin="10"/>
                <Label Text="Keep track of every gig, festival and performances you've seen" 
                       HorizontalOptions="Center"
                       FontSize="24"
                       HorizontalTextAlignment="Center"/> 
            </VerticalStackLayout>

            <!-- STATS PANEL -->
            <Border Grid.Row="1" 
                    x:Name="StatsPanel"
                    IsVisible="{Binding HasConcerts}"
                    Margin="5" 
                    Padding="12" 
                    HeightRequest="100"
                    StrokeThickness="2"
                    Stroke="{DynamicResource Primary}">

                <Grid RowDefinitions="*,*"
                      ColumnDefinitions="*,*,*"
                      RowSpacing="8"
                      ColumnSpacing="24"
                      Margin="0,0,0,12"
                      HorizontalOptions="Center">


                    <Label Grid.Row="0" 
                           Grid.Column="0"
                           Text="Happened"/>
                    <Label Grid.Row="1" 
                        Grid.Column="0"
                        Text="{Binding HappenedCount}"/>

                    <Label Grid.Row="0"
                           Grid.Column="1"
                           Text="Scheduled"/>
                    <Label Grid.Row="1"
                           Grid.Column="1"
                           Text="{Binding ScheduledCount}"/>

                    <Label Grid.Row="0"
                           Grid.Column="2"
                           Text="All"/>
                    <Label Grid.Row="1" 
                           Grid.Column="2"
                            Text="{Binding TotalCount}"/>

                </Grid>
            </Border>
        </Grid>
        <!--Navigation bar-->
        <controls:BottomNavBar Grid.Row="3" />
    </Grid>
</ContentPage>