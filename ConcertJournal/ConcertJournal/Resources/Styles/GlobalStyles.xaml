<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcertJournal.Resources.Styles.GlobalStyles">

    <!-- Global Styles -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="{DynamicResource ButtonBackground}" />
        <Setter Property="TextColor" Value="{DynamicResource ButtonTextColor}" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="BorderWidth" Value="1" />
        <Setter Property="BorderColor" Value="{DynamicResource ButtonBorderColor}" />
        <Setter Property="Padding" Value="5" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Surface}" />
        <Setter Property="PlaceholderColor" Value="{DynamicResource MutedText}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="ClearButtonVisibility" Value="WhileEditing" />
        <Setter Property="Keyboard" Value="Chat" />
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Surface}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="Picker">
        <Setter Property="FontSize" Value="16" />
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Surface}" />
    </Style>
    
    <Style TargetType="SearchBar">
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Surface}" />
        <Setter Property="PlaceholderColor" Value="{DynamicResource MutedText}" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="CancelButtonColor" Value="{DynamicResource ButtonRed}" />
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
        <Setter Property="BackgroundColor" Value="{DynamicResource Surface}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="ImageButton">
        <Setter Property="BackgroundColor" Value="Transparent"/>
        <Setter Property="WidthRequest" Value="40"/>
        <Setter Property="HeightRequest" Value="40"/>
        <Setter Property="BorderWidth" Value="0" />
        <Setter Property="HorizontalOptions" Value="Center" />
    </Style>

    <Style TargetType="Border">
        <Setter Property="StrokeShape" Value="10"/>
        <Setter Property="BackgroundColor" Value="Transparent" />
    </Style>

    <Style TargetType="Switch">
        <Setter Property="Margin" Value="0"/>
    </Style>

</ResourceDictionary>