<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcertJournal.Views.ConcertDetailsPage"
             xmlns:controls="clr-namespace:ConcertJournal.Views.Controls"
             BackgroundColor="{DynamicResource Background}">

    <Grid RowDefinitions="*,Auto">
        <ScrollView Grid.Row="0">
            <StackLayout Padding="24" Spacing="20">

                <Button Text="Update"
                        BackgroundColor="{DynamicResource ButtonGreen}"
                        CornerRadius="8"
                        Clicked="OnUpdateClicked"/>

                <Label Text="{Binding EventTitle}" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

                <Label Text="Performers:" FontAttributes="Bold"/>
                <Label Text="{Binding Performers}" />

                <Label Text="Venue:" FontAttributes="Bold"/>
                <Label Text="{Binding Venue}" />

                <Label Text="City, Country:" FontAttributes="Bold"/>
                <Label Text="{Binding City}" />
                <Label Text="{Binding Country}" />

                <Label Text="Date:" FontAttributes="Bold"/>
                <Label Text="{Binding Date, StringFormat='{0:MMMM dd, yyyy}'}" />

                <Label Text="Notes:" FontAttributes="Bold"/>
                <Label Text="{Binding Notes}" />

            </StackLayout>
        </ScrollView>

        <!--Navigation bar-->
        <controls:BottomNavBar Grid.Row="1" />
    </Grid>
</ContentPage>