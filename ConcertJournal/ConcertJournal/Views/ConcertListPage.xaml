<?xml version="1.0" encoding="utf-8" ?>
<uranium:UraniumContentPage 
             x:Name="ConcertPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcertJournal.Views.ConcertListPage"
             xmlns:uranium="http://schemas.enisn-projects.io/dotnet/maui/uraniumui"
             xmlns:input="clr-namespace:InputKit.Shared.Controls;assembly=InputKit.Maui"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:controls="clr-namespace:ConcertJournal.Views.Controls"
             xmlns:models="clr-namespace:ConcertJournal.Models"
             xmlns:vm="clr-namespace:ConcertJournal.ViewModels"
             x:DataType="vm:ConcertListViewModel"
             BackgroundColor="{DynamicResource Background}"
             Shell.NavBarIsVisible="False">

    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="input:RadioButton">
                <Setter Property="TextColor" Value="{DynamicResource TextColor}" />
                <Setter Property="Color" Value="{DynamicResource Primary}" />
                <Setter Property="CircleColor" Value="{DynamicResource Secondary}" />
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*,Auto">

        <Grid RowDefinitions="Auto,*">

            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Padding="20,15,20,10" BackgroundColor="Transparent">
                <VerticalStackLayout Grid.Column="0" Spacing="2">
                    <Label Text="My Concerts" FontSize="28" FontAttributes="Bold" TextColor="{DynamicResource Primary}"/>
                    <Label Text="{Binding TotalConcertsText}" FontSize="12" Opacity="0.7" />
                </VerticalStackLayout>

                <ImageButton Grid.Column="1" 
                             Source="{DynamicResource FilterIcon}"
                             Command="{Binding ToggleFilterCommand}"
                             BackgroundColor="{DynamicResource CardBackground}"
                             CornerRadius="10"
                             Padding="10"
                             HeightRequest="45" WidthRequest="45"
                             VerticalOptions="Center"/>
            </Grid>

            <CollectionView Grid.Row="1" 
                            ItemsSource="{Binding Concerts}"
                            RemainingItemsThreshold="5"
                            RemainingItemsThresholdReachedCommand="{Binding LoadMoreConcertsCommand}">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="0"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Concert">
                        <Grid Padding="15,8">
                            <Border StrokeShape="RoundRectangle 15" 
                                    BackgroundColor="{DynamicResource CardBackground}" 
                                    StrokeThickness="0">
                                <Border.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding BindingContext.CardClickedCommand, Source={x:Reference ConcertPage}}"
                                                         CommandParameter="{Binding .}" />
                                </Border.GestureRecognizers>

                                <Grid ColumnDefinitions="Auto, *, Auto" Padding="12" ColumnSpacing="15">
                                    <Border Grid.Column="0" WidthRequest="55" HeightRequest="60" 
                                            StrokeShape="RoundRectangle 10" BackgroundColor="{DynamicResource Background}">
                                        <VerticalStackLayout VerticalOptions="Center">
                                            <Label Text="{Binding Date, StringFormat='{0:MMM}'}" FontSize="10" 
                                                   HorizontalOptions="Center" TextColor="{DynamicResource Primary}" FontAttributes="Bold"/>
                                            <Label Text="{Binding Date, StringFormat='{0:dd}'}" FontSize="20" 
                                                   HorizontalOptions="Center" FontAttributes="Bold"/>
                                            <Label Text="{Binding Date, StringFormat='{0:yyyy}'}" FontSize="10" 
                                                   HorizontalOptions="Center" TextColor="{DynamicResource Primary}" FontAttributes="Bold"/>
                                        </VerticalStackLayout>
                                    </Border>

                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                        <Label Text="{Binding EventTitle}" FontSize="18" FontAttributes="Bold" LineBreakMode="TailTruncation"/>
                                        <Label Text="{Binding DisplayPerformers}" FontSize="14" Opacity="0.8" LineBreakMode="TailTruncation"/>
                                        <HorizontalStackLayout Spacing="5" Opacity="0.6">
                                            <Label Text="{Binding Venue}" FontSize="12"/>
                                            <Label Text="â€¢" FontSize="12"/>
                                            <Label Text="{Binding Location}" FontSize="12"/>
                                        </HorizontalStackLayout>
                                    </VerticalStackLayout>

                                    <ImageButton Grid.Column="2" 
                                                 Source="{DynamicResource ThreeDotsIcon}"
                                                 Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ConcertListViewModel}}, Path=ShowOptionsCommand}"
                                                 CommandParameter="{Binding .}"
                                                 BackgroundColor="Transparent"
                                                 VerticalOptions="Start"
                                                 HeightRequest="30"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>

                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center" Spacing="15">
                        <Label Text="No concerts found" FontSize="18" FontAttributes="Bold" HorizontalTextAlignment="Center"/>
                        <Label Text="Time to book some tickets!" Opacity="0.7" HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </Grid>

        <Button Grid.Row="0" 
                Text="+" 
                FontSize="30"
                FontAttributes="Bold"
                BackgroundColor="{DynamicResource Primary}"
                TextColor="White"
                HeightRequest="60" WidthRequest="60"
                CornerRadius="30"
                HorizontalOptions="End" VerticalOptions="End"
                Margin="25"
                Command="{Binding GoAddConcertCommand}"/>

        <controls:BottomNavBar Grid.Row="1" ActiveRoute="ConcertListPage"/>
    </Grid>

    <uranium:UraniumContentPage.Attachments>
        <material:BackdropView IsPresented="{Binding IsFilterPresented}" 
                               Title="Filter &amp; Sort"
                               BackgroundColor="{DynamicResource CardBackground}">
            <VerticalStackLayout Spacing="25" Padding="20,30">

                <SearchBar Placeholder="Search by artist or venue..." 
                           Text="{Binding SearchText}"
                           BackgroundColor="{DynamicResource Background}">
                    <SearchBar.Behaviors>
                        <toolkit:EventToCommandBehavior EventName="TextChanged" Command="{Binding SearchCommand}" />
                    </SearchBar.Behaviors>
                </SearchBar>

                <VerticalStackLayout Spacing="10">
                    <Label Text="SORT BY" FontSize="12" FontAttributes="Bold" Opacity="0.6" Margin="5,0"/>
                    <Border StrokeShape="RoundRectangle 15" Padding="15" BackgroundColor="{DynamicResource Background}">
                        <input:RadioButtonGroupView SelectedItem="{Binding SelectedSort, Mode=TwoWay}">
                            <input:RadioButton Text="Latest Added" Value="LatestAdded" />
                            <input:RadioButton Text="Newest By Date" Value="NewestByDate" />
                            <input:RadioButton Text="Oldest By Date" Value="OldestByDate" />
                        </input:RadioButtonGroupView>
                    </Border>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </material:BackdropView>
    </uranium:UraniumContentPage.Attachments>
</uranium:UraniumContentPage>