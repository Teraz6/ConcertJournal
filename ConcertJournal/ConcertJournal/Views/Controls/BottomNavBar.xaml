<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcertJournal.Views.Controls.BottomNavBar"
             x:Name="NavBarView">
    
    <Grid BackgroundColor="{DynamicResource NavBarBackground}"
          Padding="10,5"
          ColumnDefinitions="*,*,*"
          VerticalOptions="End"
          HorizontalOptions="Fill"
          HeightRequest="70">
        
        <ImageButton
            Source="home.png"
            Grid.Column="0"
            Command="{Binding NavigateHomeCommand, Source={x:Reference NavBarView}}"
            BackgroundColor="Transparent"
            WidthRequest="40"
            HeightRequest="40"
            Clicked="OnHomeClicked"/>

        <ImageButton
            Source="plus.png"
            Grid.Column="1"
            Command="{Binding NavigateAddCommand, Source={x:Reference NavBarView}}"
            BackgroundColor="Transparent"
            WidthRequest="40"
            HeightRequest="40"
            Clicked="OnAddClicked"/>

        <ImageButton
            Source="list.png"
            Grid.Column="2"
            Command="{Binding NavigateListCommand, Source={x:Reference NavBarView}}"
            BackgroundColor="Transparent"
            WidthRequest="40"
            HeightRequest="40"
            Clicked="OnListClicked"/>
    </Grid>
</ContentView>
