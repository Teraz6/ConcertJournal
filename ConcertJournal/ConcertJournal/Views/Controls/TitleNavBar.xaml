<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ConcertJournal.Views.Controls.TitleNavBar"
             x:Name="NavBarView">
    
    <Grid BackgroundColor="{DynamicResource NavBarBackground}"
          Padding="10,5"
          ColumnDefinitions="*,*"
          RowDefinitions="*,*"
          VerticalOptions="End"
          HorizontalOptions="Fill">
     
        <ImageButton
            Source="{DynamicResource HomeIcon}"
            Grid.Column="0"
            Grid.Row="0"
            Command="{Binding NavigateHomeCommand, Source={x:Reference NavBarView}}"
            Clicked="OnHomeClicked"
            BorderWidth="1"
            BorderColor="Black"
            HorizontalOptions="Fill"
            VerticalOptions="Fill"
            Padding="10"/>

        <ImageButton
            Source="{DynamicResource PlusIcon}"
            Grid.Column="1"
            Grid.Row="0"
            Command="{Binding NavigateAddCommand, Source={x:Reference NavBarView}}"
            Clicked="OnAddClicked"
            HeightRequest="100"
            WidthRequest="100"
            Padding="10"/>

        <ImageButton
            Source="{DynamicResource ListIcon}"
            Grid.Column="0"
            Grid.Row="1"
            Command="{Binding NavigateListCommand, Source={x:Reference NavBarView}}"
            Clicked="OnListClicked"
            HeightRequest="100"
            WidthRequest="100"
            Padding="10"/>
        
        <ImageButton
            Source="{DynamicResource SettingsIcon}"
            Grid.Column="1"
            Grid.Row="1"
            Command="{Binding NavigateSettingsCommand, Source={x:Reference NavBarView}}"
            Clicked="OnSettingsClicked"
            HeightRequest="100"
            WidthRequest="100"
            Padding="10"/>
    </Grid>
</ContentView>
